@model List<AzureWebApp2.Models.Info>
@{
    ViewData["Title"] = "INFO Update";
}

<div class="container">
    <h1 class="mb-4">üìù Update INFO Table</h1>
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info">
            @ViewBag.Message
        </div>
    }
    <div class="row">
        <div class="col-md-6">
            <h3>Add New Entry</h3>
            <form asp-action="Update" method="post" class="mb-4">
                <div class="form-group mb-3">
                    <label for="column" class="form-label">Column Value:</label>
                    <input type="text" class="form-control" id="column" name="column" required />
                </div>
                <button type="submit" class="btn btn-success">Update INFO Table</button>
            </form>
        </div>
        <div class="col-md-6">
            <h3>Current INFO Table Entries</h3>
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Column Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Column</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">No entries found in INFO table.</p>
            }
        </div>
    </div>
    <div class="mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">‚Üê Back to Home</a>
    </div>
</div>
